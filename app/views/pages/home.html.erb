<%= render 'jumbotron' %>
<%= render 'account_details' %>

<% if pending_user_registration? %>
  <%= render 'user_registrations' %>
<% elsif admin? %>
  <%= render 'admin_user_registrations' %>
  <%= render 'admin_course_registrations' %>
<% elsif teacher? %>
  <%= render 'teacher_course_portal' %>
<% elsif student? %>
  <%= render 'student_course_portal', courses: current_user.courses.distinct %>
<% end %>

<%= render 'course_search' %>
