<%= render partial: 'jumbotron', locals: { user: current_user, semester: current_semester } %>
<%= render partial: 'account_details', locals: { user: current_user } %>

<% if @user_registration %>
  <%= render 'user_registrations' %>
<% elsif current_user.type == "Admin" %>
  <%= render 'admin_user_registrations' %>
  <%= render 'admin_course_registrations' %>
  <%= render 'admin_analytics' %>
<% elsif current_user.type == "Teacher" %>
  <%= render 'teacher_course_portal' %>
<% elsif current_user.type == "Student" %>
  <%= render 'student_course_portal', courses: current_user.courses.distinct %>
<% end %>

<%= render 'course_search' %>
