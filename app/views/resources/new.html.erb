<h1>Create Resource</h1>

<%= form_with(model: @resource) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Title:" %>
    <%= form.text_field :title, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description:" %>
    <%= form.text_field :description, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hyperlink, "Hyperlink:" %>
    <%= form.text_field :hyperlink, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :resource_type, "Resource Type:" %>
    <%= form.select :resource_type, ["Video", "Url", "Document"], { include_blank: "Select Resource Type" }, { :required => true, :class => "form-control" } %>
  </div>

  <div class="actions">
    <br><%= form.submit "Save Resource", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
